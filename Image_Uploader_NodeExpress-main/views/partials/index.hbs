

{{!-- section --}}
    <section class="section my-4">
        <div class="container text-center">
            <div class="title py-5">
                <img src="logo.png"></img>
            </div>

            <div class="row justify-content-center">
                <div class="col-4">
                    <form action="/uploadmultiple" enctype="multipart/form-data" method="POST">
                        <div class="row">
                            Add a description: <input type="text" name="description" required></label>
                            <br>
                            <div class="col-8">
                                <input type="file" class="form-control" name="images" id="formFile" multiple>
                            </div>
                            <div class="col-2">
                                <input type="submit" class="btn btn-warning" value="Upload Images">
                            </div>
                        </div>
                    </form>
                </div>
                <div class = "col-55">
                    <form action="/deleteimages" method="POST"> 
                        <input type="submit" class="btn btn-danger font-size-09 text-light" value= "Delete All">
                    </form>
                </div>
            </div>

            {{!-- display images --}}
                <section class="mt-5">
                    <div class="row">
                            {{#each images}} 
                                {{#each this}}
                                    {{#if imageBase64 }}
                                        {{!-- bootstrap cads --}}
                                            <div class="col-3">
                                                    <div class="card shadow" style="width: 18rem;">
                                                        <img src='data:{{contentType}};base64,{{imageBase64}}' class="card-img-top" class="img-fluid" alt="...">
                                                        <div class="card-body">
                                                             <h5 class="card-title font-poppins">{{ this.filename }}</h5>
                                                            {{!-- TODO: MAGGIE --}}
                                                            <div contenteditable="true"class="text-secondary font-size-09">{{ this.description }}</div>
                                                            {{!-- TODO: MAGGIE --}}
                                                            <a href="#" class="btn btn-info font-size-09 text-light">Read More...</a>
                                                        </div>
                                                    </div>
                                            </div>
                                        {{!-- /bootstrap cads --}}
                                    {{/if}}
                                 {{/each}}
                            {{/each}}
                    </div>
                </section>
            {{!-- /display images --}}

        </div>
    </section>
{{!-- /section --}}
